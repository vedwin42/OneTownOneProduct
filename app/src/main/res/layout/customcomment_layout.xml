<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/customlistview_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emailaddress_string"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/customlistview_timestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/timestamp_string"
            android:textSize="15dp"
            android:layout_weight="1"
            android:gravity="right"
            />

    </LinearLayout>


    <EditText
        android:id="@+id/customlistview_commentcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userscomment_string"
        android:maxLines="1"
        android:textSize="14dp"/>

</LinearLayout>